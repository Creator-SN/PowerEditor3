{
	"compilerOptions": {
        "outDir": "dist",
		"target": "ESNext",
		"module": "ESNext",
		"lib": ["ESNext", "DOM"],
		"moduleResolution": "Node",
		"esModuleInterop": true,
		"jsx": "preserve",
		"sourceMap": true,
		"resolveJsonModule": true,
		"isolatedModules": false,
		"skipLibCheck": true,
		"strict": true,
		"baseUrl": "./",
		"paths": {
			"@/*": ["src/*"]
		},
		"declaration": true,
		"allowJs": true
	},
	"include": ["packages/**/*", "docs/**/*"],
	"references": [{ "path": "./tsconfig.node.json" }]
}
